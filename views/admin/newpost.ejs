<%- include('../partials/htmlTop') %>
<link rel="stylesheet" href="./css/navbar.css">
<link rel="stylesheet" href="./css/footer.css">
<link rel="stylesheet" href="./css/newpost.css">
<%- include('../partials/navbar') %>
<header>
    <img id="headerImg" src="./images/newpost.jpg" alt="Contact">
    <h1 class="mainTitle">New Article</h1>
</header>

<main>
    <form action="" method="post">
        <div>
            
            <label id="firstLbl" for="authorInput">Authors &</label>
            <label id="secondLbl" for="positionInput">Position of Authors</label>
            <input type="number" min="1" max="5" id="numAuthorsInput" value="1">
            <div class="authorContainer">
                <div>
                    <label class="authorNum">Author 1</label>
                    <input class="authorInput" type="text" placeholder="Author Name">
                    <input class="positionInput" type="text" placeholder="Position">
                </div>
                <div>
                    <label class="authorNum">Author 2</label>
                    <input class="authorInput" type="text" placeholder="Author Name">
                    <input class="positionInput" type="text" placeholder="Position">
                </div>
                <div>
                    <label class="authorNum">Author 3</label>
                    <input class="authorInput" type="text" placeholder="Author Name">
                    <input class="positionInput" type="text" placeholder="Position">
                </div>
                <div>
                    <label class="authorNum">Author 4</label>
                    <input class="authorInput" type="text" placeholder="Author Name">
                    <input class="positionInput" type="text" placeholder="Position">
                </div>
                <div>
                    <label class="authorNum">Author 5</label>
                    <input class="authorInput" type="text" placeholder="Author Name">
                    <input class="positionInput" type="text" placeholder="Position">
                </div>
            </div>
        </div>

        <div>
            <label for="titleInput">Title</label>
            <input id="titleInput" type="text" placeholder="Title">
        </div>
        <div>
            <label for="imgInput">Image</label>
            <input id="imgInput" type="file">
        </div>
        <div>
            <label for="parInput">Content</label>
            <textarea id="parInput" placeholder="Content"></textarea>
        </div>

        <button class="postBtn" type="submit">Post Article</button>
    </form>
</main>


<%- include('../partials/footer') %>
<%- include('../partials/jsLinks') %>
