<%- include('../partials/htmlTop') %>
<link rel="stylesheet" href="/css/navbar.css">
<link rel="stylesheet" href="/css/footer.css">
<link rel="stylesheet" href="/css/edit.css">
<%- include('../partials/navbar') %>
<header>
    <img id="headerImg" src="/images/newpost.jpg" alt="Contact">
    <h1 class="mainTitle">New Article</h1>
</header>

<main>
    <form method="POST" action="/edit/<%= article._id %>?_method=PATCH">
        <div class="form-group">
            <label for="author">Author: </label>
            <input type="text" name="author" id="author" value="<%= article.author %>">
        </div>
        <div class="form-group">
            <label for="imgUrl">Image URL: </label>
            <input type="text" name="imgUrl" id="imgUrl" value="<%= article.imgUrl %>">
        </div>
        <div class="form-group">
            <label for="title">Title: </label>
            <input type="text" name="title" id="title" value="<%= article.title %>">
        </div>
        <div class="form-group">
            <label for="content">Content: </label>
            <textarea name="content" id="content" cols="30" rows="10"><%= article.content %></textarea>
        </div>

        <input class="postBtn" type="submit" value="Edit Article">
    </form>
</main>


<%- include('../partials/footer') %>
<%- include('../partials/jsLinks') %>
